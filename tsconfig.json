{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "removeComments": true,
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
  },
  "exclude": ["node_modules", "build", "scripts"],
  "include": ["src/**/*"],
}
